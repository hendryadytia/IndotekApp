<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/graybg">
    <View
        android:id="@+id/topll"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/maroon"/>
    <TextView
        android:id="@+id/namaadmintv"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="nama admin"
        android:textColor="@color/white"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/judulcv"
        app:layout_constraintTop_toBottomOf="@id/topll"
        android:layout_marginTop="-35dp"
        android:layout_marginLeft="-12dp"
        android:layout_marginRight="40dp"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:cardCornerRadius="12dp">
        t<TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="@string/judul_home"
        android:gravity="center_vertical"
        android:textSize="16dp"
        android:layout_marginLeft="24dp"/>

    </androidx.cardview.widget.CardView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/notifrv"
        android:clipToPadding="false"
        android:paddingTop="45dp"
        android:paddingBottom="16dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/topll"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <LinearLayout
        android:id="@+id/llsplash"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:elevation="200dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logo_indotek"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>